<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey">

    <include
        android:id="@+id/toolbar_order_material"
        layout="@layout/toolbar_order_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:paddingBottom="102dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_order_material">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_order_material_receipt"
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_below="@+id/txt_order_material_ment"
                android:layout_marginTop="24dp"
                android:src="@drawable/pumpkin"/>

            <TextView
                android:id="@+id/txt_order_material_ment"
                style="@style/regularLightishBlueStyle14sp"
                android:layout_width="match_parent"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="올라의 자신감. \n 싱싱한, 믿을 만한, 건강한 재료입니다."
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>