<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    tools:context=".UI.menu.MenuDetailInfoActivity">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:textStyle="bold"
        android:background="@color/white"
        android:id="@+id/toolbar">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세이력"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="#212529"
                android:id="@+id/toolbar_title"/>


            <ImageView
                android:id="@+id/btn_toolbar_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/back_icon"/>
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/white_round_border">

    <LinearLayout
        android:id="@+id/ll_ac_menu_detail_info_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="품목"/>

            <View
                android:id="@+id/view_section_vertical1"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical1"
                android:text="호박"/>


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
